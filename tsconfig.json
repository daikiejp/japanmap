  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
